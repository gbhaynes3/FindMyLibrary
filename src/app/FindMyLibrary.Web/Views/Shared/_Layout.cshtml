@using System.Web.Optimization
<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <meta name="description" content="Find your local public library"/>
        <meta name="keywords" content="Library, Public Library, Public, My Library"/>
      
        @Styles.Render("~/Content/bootstrap.css", "~/Content/Site.css")
        @Styles.Render("~/Content/bootstrap-responsive.min.css")
        @*@Styles.Render("~/Content/themes/base/css", "~/Content/Site.css", "~/Content/bootstrap.css")*@
        @Scripts.Render("http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.7.2.min.js")
        @Scripts.Render("~/Scripts/FindMyLibrary.js", "~/Scripts/bootstrap.js")
    </head>
    <body>
      <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a> 
                    <a class="brand" href="#">Find My Library</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active"><a href="/">Home</a></li>
                            <li><a href="#about">About</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container">
          <section id="article" >
            <br /><br/><br/><br/>
            @RenderBody()
            
          </section>
        </div>
    </body>
</html>